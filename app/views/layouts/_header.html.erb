<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <% unless logged_in? %>
     <%= link_to "勤怠システム", root_path, id: "logo" %>
    <% else %>
     <%= link_to "勤怠システム", user_path(current_user), id: "logo" %>
    <% end %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "トップへ", root_path %></li>
        <% if logged_in? %>
         <% if current_user.admin? %>
          <li><%= link_to "ユーザー一覧", users_path %></li>
          <li><%= link_to "基本情報の修正", edit_basic_info_user_path(current_user) %></li>
         <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              メニュー <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "勤怠", current_user %></li>
              <li><%= link_to "設定", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "ログアウト", logout_path, method: :delete %>
              </li>
            </ul>
        <% else %>
          <li><%= link_to "ログイン", login_path %></li>
         </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
